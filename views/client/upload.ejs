      method="post">
      <div class="form-group row group-position" style="margin-top:10px; width:93%;">
        <h3>連絡事項</h3>
        <label for="memo" style="font-size:13px; margin: 27px 0px 0px -80px;">協会への連絡事項</label>
      </div>

