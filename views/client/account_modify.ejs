<!DOCTYPE html>
<script src="https://code.jquery.com/jquery-3.1.0.js"></script>
<script src="/js/account_modify.js"></script>
<html>

<head>
    <%- include('../partials/head/head.ejs') %>
</head>

<body>
    <%- include('../partials/top/nav.ejs') %>

        <form action="/account_modify" id="account-modify" method="POST">
            <div class="content" style="height: 550px;">
                <div class="text-postion">
                    <div class="text-postion">
                        <label for="user-id" class="label-font-setting">社員番号</label>
                        <div class="col-sm-9 row-position">
                            <input type="text" id="user-id" name="user_id" value="<%= userInfo.user_id %>"
                                class="form-control input-width" readonly>
                        </div>
                    </div>

                    <div class="text-postion" style="margin-top:-15px;">
                        <label for="user-name" class="label-font-setting">氏名</label>
                        <div class="col-sm-9 row-position">
                            <input type="text" id="user-name" name="user_name" value="<%= userInfo.user_name %>"
                                class="form-control input-width">
                        </div>
                    </div>

                    <div class="text-postion" style="margin-top:-15px;">
                        <label for="user-number" class="label-font-setting">電話番号</label>
                        <div class="col-sm-9 row-position">
                            <input type="tel" id="user-phone-number" name="user_phone_number"
                                value="<%= userInfo.user_phone_number %>" class="form-control input-width">
                        </div>
                    </div>

                    <div class="text-postion" style="margin-top:-15px;">
                        <label for="user-birth" class="label-font-setting">生年月日</label>
                        <div class="col-sm-9 row-position">
                            <input type="text" id="user-birth" name="user_birth" value="<%= userInfo.user_birth %>"
                                class="form-control input-width">
                        </div>
                    </div>

                    <div class="text-postion" style="margin-top:-15px;">
                        <label for="user-mail" class="label-font-setting">メールアドレス</label>
                        <div class="col-sm-9 row-position">
                            <input type="email" id="user-mail" name="user_mail" value="<%= userInfo.user_mail %>"
                                class="form-control input-width">
                        </div>
                    </div>

                    <div class="form-group" style="text-align: center; margin-top: 0px;">
                        <button type="submit" id="account-modify" class='btn btn-primary' style="width: 100%;">情報変更</button>
                    </div>
                </div>
        </form>
</body>

</html>